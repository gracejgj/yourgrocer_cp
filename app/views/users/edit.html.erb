<div class='container my-5'>
  <div class="card">
    <div class="card-body my-3 mx-3">
      <h3 class="feature-title">User Profile
      </h3>
      <br>
      <div class="mb-3">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, style: 'width: 200px;' %>
        <% end %>
      </div>

      <div class="mb-3">
        <h2>Hello,<%= @user.username %>!</h2>
      </div>
      <div class="mb-3"><%= @user.first_name %><%= @user.last_name %></div>
      <div class="mb-3"><%= @user.phone_number %>
      </div>
      <div class="mb-3"><%= @user.email %></div>

    </div>
  </div>
</div>

<div class='container my-5'>
  <div class="card">
    <div class="card-body my-3 mx-3">
      <h3 class="feature-title">Profile Setting</h3>

      <%= form_with(model: @user) do |f| %>
      <%= render 'shared/form_error', object: @user %>

      <div class="mb-3">
        <%= f.label :avatar, class: "form-label" %>
        <%= f.file_field :avatar, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class:"form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit 'Save', class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</div>
